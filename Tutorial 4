body {
    background: #7aa3cc;
}

h1{
    color: #9b59b6;
}
h2{
    color: rgb(255, 157, 0);
}

li{
    color: rgb(54, 108, 173)
}

p{
    background: rgb(243, 243, 141);
}

input{
    border: 3px solid red;
}

.class{
    background: white;
}
#special{
    border: 2px solid blue;
}
div p{
    font-size: 25px;
}

input[type="text"]{
    background: rgb(198, 198, 198);
}

div:nth-of-type(3){
    background-color: pink;
}
div p:nth-of-type(2){
    border: 5px solid white;
}

div em{
    color : white;
    font-size: 20px;
}

input[type=checkbox]{
    margin-left: 50px ;
}

label{
    text-transform: capitalize;
}

p+#special::first-letter{
    font-size: 100px;
    color: green;
}

h1:hover{
    color: blue;
}
a:visited{
    color: grey;
}

